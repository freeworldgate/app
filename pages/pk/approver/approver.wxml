                        <view class="rus line-1-start fs-30 fw-400 ">{{user.userName}}</view>
                    </view>
                    <view class="ccc pl-50 ">
                        <view bindtap="_editImageDialog_confirm" class="rcc t19-5">确定</view>
                    </view>
                </view>
                <view class="h-30"></view>
                <view class="rbs b-50 pt-20 pb-20">
                    <view class="rcc b-white">
                        <image class="br-10" mode="aspectFill" src="{{editImageDialog.images[0]}}" style="height:20vw;width:20vw"></image>
                    </view>
                    
                    <view class="css ">
                        <textarea adjustPosition="true" bindinput="_editImageDialog_input" class="t19-1-edit" cursorSpacing="50" fixed="true" maxlength="50" placeholder="{{editImageDialog._default_edit_text}}" value="{{editImageDialog.text}}"></textarea>
                    </view>
                    
                </view>
                <view class="h-30"></view>
