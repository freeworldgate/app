                                            <image class="rcc h-180 w-180 br-15" mode="aspectFill" src="{{currentApprover.approveComment.imgUrl}}"></image>
                                        </view>

                                </view>                       
                                                        
                            </view>
                            <view class="rbc">
                                <view class="fs-25 fw-400 ">今天 12:23</view>
