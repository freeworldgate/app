    <swiper class="w-100vw h-700" bindchange="changeApprover" current="{{currentIndex}}" >
        <block  wx:for="{{approveUserList}}" wx:for-item="approver" wx:key="*idx2" >
            <swiper-item class="css   backImg25-1">

                <view class="css pl-4vw pr-4vw ">
                    <view class="rac h-100">
                                                    <view hidden="{{approver.user.userId === creator.userId}}" class="ccc w-110 c-word">
                                                        <view class="fs-40 fw-700">{{approver.approveDynamic.yesterdayRank + 1}}</view>
                                                        <view class="fs-25 fw-400">昨日排名</view>
                                                    </view>
                                                    <view hidden="{{approver.user.userId === creator.userId}}"  class="ccc w-110 c-word">
                                                        <view class="fs-40 fw-700">{{approver.approveDynamic.yesterdayScore}}</view>
                                                        <view class="fs-25 fw-400">昨日积分</view>
                                                    </view>

                                                    <view class="ccc w-110 c-word">
                                                        <view class="fs-40 fw-700">{{approver.approveDynamic.approved}}</view>
                                                        <view class="fs-25 fw-400 ">已审核</view>
                                                    </view>
                                                    <view class="ccc w-110 c-word">
                                                        <view class="fs-40 fw-700">{{approver.approveDynamic.approving}}</view>
                                                        <view class="fs-25 fw-400 ">审核中</view>
                                                    </view>
                                                
                    </view>

                    <view class="h-50"></view>
                    <view class="css b-card br-10 pl-30 pr-30 pt-50">
