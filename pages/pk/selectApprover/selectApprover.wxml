                                        <image wx:else class="h-50 w-50" mode="scaleToFill" src="/images/link.png" ></image>
                                    </view>

                            </view>                       
                                                    
                        </view>
                        
                      
                        <view class="rbs ">
                            
                            <navigator class="rcc p-10" url="/pages/pk/message/message?pkId={{pkId}}">
                                                <image class="w-40 h-40" mode="aspectFit" src="/images/group.png"></image>
                                                <view class="w-10"></view>
                                                <view class="fs-25 line-h25 fw-400 c-word-3 ">审核群</view>
                            </navigator>
                    
                            <view  class="rcc pt-50 pb-50 " bindtap='playVoice' data-specktime="{{currentApprover.approveMessage.speckTime}}" data-voiceurl="{{currentApprover.approveMessage.voiceUrl}}" >
                                <image class="w-40 h-40" mode="aspectFit" src="/images/voice1.png"></image>
                                <view  class="w-10"></view>
                                <view  class="fs-25 fw-400 c-white">{{currentApprover.approveMessage.speckTime}}秒</view>
                            </view>


                        
                        </view>
                    </view>



                </view>
            
            </swiper-item>
        </block>
    </swiper>    



       

                    
