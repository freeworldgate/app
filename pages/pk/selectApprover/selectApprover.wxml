                                <view class="fs-35 fw-400 ">00:00 ~ 23:00</view>


                            </view>
                            <view class="rcc " bindtap="approverMessage">
                                                
                                                <view class="{{approver.approveMessage?'fs-25 line-h25 fw-400 c-word':'fs-25 line-h25 fw-400 c-3-1'}} ">详情</view>
                                                <view class="w-10"></view>
                                                <image class="w-20 h-20" mode="aspectFit" src="{{approver.approveMessage?'/images/right4.png':'/images/right3.png'}}"></image>
                            </view>

                        </view> 
                        <view class="h-50"></view>
                        <view class="rss" bindtap="approverMessage">
                            <view class="ccs">
                                <view class="rcc">
                                    <image class="h-10vw w-10vw br-10" mode="aspectFill" src="{{approver.user.imgUrl}}" ></image>
                                </view>
                                                            
                            </view>
                            <view class="w-4vw"></view>
                            <view class="css" style="flex:1">
                                <view class="rbc-nowrap">
                                    <view class="rus  fs-30 fw-700 line-1-start c-word-1">{{approver.user.userName}}</view>
                                    <view class="w-100"></view>
                                </view>

                                <view class="rbc-nowrap  c-word">
                                    <view class="{{approver.approveMessage?'rus fs-30 fw-400 line-3-start c-word-5':'rus fs-30 fw-400 line-3-start c-word-4'}}">{{approver.approveMessage?approver.approveMessage.text:'用户未激活审核公告,您可以选择其他今日审核用户审批您的内容...'}}</view>
                                    <view></view>
                                </view>
                                        
                            </view>
                            <view class="w-10"></view>
                            <!-- <view class="rcc">
                                <image class="h-130 w-130 br-15" mode="aspectFill" src="{{approver.approveMessage.imgeUrl}}" ></image>
                            </view> -->
                            <view class="ccs ">
                                    <view class="rcc h-180 w-180 br-15 b-card">
