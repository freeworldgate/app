<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__text-area">
              <view class="weui-msg__title">登录</view>
        </view>

        <view class="avatar_head">
            <view class="userinfo-avatar">
              <open-data  type="userAvatarUrl"></open-data>
           </view>

        </view>



        <view class="weui-msg__text-area">
              <view class="login_info">
                    <image class="login_user_image" src="/images/login.png"  mode="aspectFill" ></image>
                    <input  class="login_info_input"  bindinput="inputUserTel" placeholder="请输入手机号码" type='number'                       adjust-position='true'  />
              </view>
              <view class="login_info">
                    <image class="login_user_image"  src="/images/vcode.png"   mode="aspectFill"></image>
                    <input class="login_info_input"  bindinput="inputVCode" placeholder="输入验证码" type='number'
                    adjust-position='true' placeholder-style="color:red"  />
              </view>
        </view>



        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary"  bindtap='register'>登录</button>
                
                <button class="weui-btn" type="warn"  bindtap='getVCode'>获取验证码</button>
            </view>

            
        </view>
        
        
        
        <view class="weui-msg__extra-area">
            <view class="weui-footer">
                <view class="weui-footer__text">Copyright © 2008-2016 weui.io</view>
            </view>
        </view>


    </view>
</view>
















